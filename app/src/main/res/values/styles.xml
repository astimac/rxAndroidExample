<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MyTheme">
        <!-- Customize your theme here. -->
    </style>

    <!-- extend one of the Theme.AppCompat themes -->
    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_yellow</item>
        <item name="android:textColorPrimary">@color/background_gray</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColorSecondary">@color/background_gray</item>
    </style>

</resources>
